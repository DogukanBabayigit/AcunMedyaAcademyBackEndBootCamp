@using EfCore.Shared.Dtos
@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Index";
}
<h1>Ürünler</h1>
<a class="btn btn-primary" asp-controller="Product" asp-action="Create">Yeni Ürün</a>
<hr>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ürün</th>
        <th>Fiyat</th>
        <th>İşlemler</th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Düzenle</a>
                    <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Sil</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">Kayıt bulunamadı.</td>
        </tr>
    }
</table>